# Turn Off Auto SkyWarn
#
script_dir=$(dirname "$0")
source "$script_dir/AutoSky.ini"

WXT="$TMPDIR/WXA"               # where you store the weather tail message
TAILMSG="wx-tail.wav"           # point to this file in rpt.conf

WXA="$BASEDIR/SOUNDS"           # where the sounds are


#ENABLEFILE=alert.enbl

# REMOVE THE ENABLE FILE
/bin/rm -f "$TMPDIR/alert.enbl"

# Replace default tail message -- nothing
/bin/cp -f  $WXA/asn99.wav $WXT/$TAILMSG

# CONFIRM THE ACTION
for Ni in $NODE ; do
	/usr/bin/asterisk -rx "rpt localplay $Ni $BASEDIR/SOUNDS/alerts-off"
done

